{
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier",
    "plugin:import/recommended",
    "plugin:import/warnings"
  ],
  "rules": {
    "@next/next/no-html-link-for-pages": 0,
    "import/no-unresolved": 0,
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "semi": ["error", "never"],
    "semi-spacing": ["error", { "before": true, "after": false }],
    "jsx-quotes": ["error", "prefer-double"]
  }
}
